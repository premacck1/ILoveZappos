<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_product_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_main_space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_main_space"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_product_dialog_iv_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_main_space"
            android:layout_weight="2"
            android:src="@mipmap/img_product_preload" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_main_space"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_product_dialog_tv_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_main_space"
                android:text="@string/fragment_product_loading"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/view_product_dialog_tv_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_main_space"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/fragment_product_loading"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/view_product_dialog_tv_oriprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_main_space"
                android:text="@string/fragment_product_loading"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/view_product_dialog_tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_main_space"
                android:text="@string/fragment_product_loading"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_product_dialog_ll_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/activity_main_space"
        android:background="@drawable/background_bar_button"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/activity_main_space">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_main_space"
            android:background="@color/transparency_color"
            android:clickable="false"
            android:src="@mipmap/ic_cart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_main_space"
            android:clickable="false"
            android:text="@string/fragment_product_add"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>