<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_main_title_logo_size"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:layout_margin="@dimen/activity_main_space"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/activity_main_btn_back"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_bar_button"
                        android:gravity="center_horizontal|center_vertical"
                        android:src="@mipmap/ic_back"></ImageButton>
                </FrameLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_main_space"
                    android:padding="@dimen/activity_main_space"
                    android:src="@drawable/img_zappos_title"></ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/activity_main_space"
                        android:layout_weight="1">

                        <ImageButton
                            android:id="@+id/activity_main_btn_search"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_bar_button"
                            android:gravity="center_horizontal|center_vertical"
                            android:src="@mipmap/ic_search"></ImageButton>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/activity_main_space"
                        android:layout_weight="1">

                        <ImageButton
                            android:id="@+id/activity_main_btn_cart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_bar_button"
                            android:gravity="center_horizontal|center_vertical"
                            android:src="@mipmap/ic_cart"></ImageButton>

                        <TextView
                            android:id="@+id/activity_main_tv_cart_count"
                            android:layout_width="@dimen/activity_main_notification_icon"
                            android:layout_height="@dimen/activity_main_notification_icon"
                            android:layout_gravity="right|top"
                            android:background="@drawable/background_cart_notification"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="1"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/white" />
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/activity_main_layout_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/activity_main_ed_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_main_space"
                    android:background="@drawable/background_search_text"
                    android:gravity="center"
                    android:hint="@string/activity_main_search_hint"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"></EditText>

                <ImageButton
                    android:id="@+id/activity_main_dropdown_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/background_bar_button"
                    android:padding="@dimen/activity_main_space"
                    android:src="@mipmap/ic_search" />
            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.tsungweiho.ilovezappos.MainActivity"></LinearLayout>
</LinearLayout>

