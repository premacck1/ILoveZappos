<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_cart_tv_norecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_main_space"
        android:gravity="center"
        android:padding="@dimen/activity_main_space"
        android:text="@string/fragment_cart_norecord"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    <ListView
        android:id="@+id/fragment_cart_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>