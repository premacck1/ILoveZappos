<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginRight="@dimen/activity_main_notification_icon"
        android:orientation="horizontal"
        android:padding="@dimen/activity_main_listview_margin">

        <ImageView
            android:id="@+id/fragment_cart_list_item_iv_product"
            android:layout_width="@dimen/activity_main_img_size"
            android:layout_height="@dimen/activity_main_img_size"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_main_space"
            android:src="@mipmap/img_product_preload" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/activity_main_space"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_cart_list_item_tv_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_main_space"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/fragment_product_loading"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/fragment_cart_list_item_tv_brandname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_main_space"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/fragment_product_loading"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_cart_list_item_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_main_space"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/fragment_product_loading"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/fragment_cart_list_item_tv_oriprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_main_space"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/fragment_product_loading"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />
            </LinearLayout>

            <TextView
                android:id="@+id/fragment_cart_list_item_tv_viewmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_main_space"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/activity_main_space"
                android:text="@string/fragment_product_view_on_web"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@drawable/textcolor_link_textview" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/fragment_cart_list_item_btn_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_margin="@dimen/activity_main_space"
        android:background="@drawable/background_remove_button" />
</FrameLayout>